<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
            <table style="width:100%; float:center; border: 4px solid black" align="center">
                <tr>
                    <td>
                        <img src='logo.png' width='300'/>
                    </td>
                </tr>
            </table>
            <table style="padding:200px; width:40%; float:center" align="center">
                <tr>
                    <td style="text-align:left; width=50%">
                        <g:Label ui:field="errorMessage" />
                    </td>
                    <td style="text-align:left; width=50%">
                        
                    </td>
                </tr>
                <tr>
                    <td style="text-align:left; width=50%">
                        <g:Label text="Login" />
                    </td>
                    <td style="text-align:left; width=50%">
                        <g:TextBox ui:field="loginBox" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label text="Password"/>
                    </td>
                    <td>
                        <g:PasswordTextBox ui:field="passwordBox" />
                    </td>
                </tr>
                <tr>
                    <td>
                            
                    </td>
                    <td>
                        <g:Button ui:field="buttonSubmit" text="Submit"/>
                    </td>
                </tr>
            </table>
            <table style="width:100%; float:center; border: 4px solid black" align="center">
                <tr>
                    <td style="text-align:center">
                            &#169; 2016 KINR
                    </td>
                </tr>
            </table>
	</g:HTMLPanel>
</ui:UiBinder>